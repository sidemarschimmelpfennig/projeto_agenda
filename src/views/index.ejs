<%- include('includes/head') %>
<%- include('includes/nav') %>
<div class="container">
     <div class="row">
          <div class="col-lg-2"></div>
          <div class="col-lg-8 my-3">
               <h1 class="text-center">
                    Agenda
               </h1>
                <% if (contacts.length > 0){ %>
               <p class="text-center lead">
                    Seus Contatos est√£o abaixo.
               </p>
               <% }else{ %>
                    <p class="text-center lead">
                        Agenda vazia clique em Novo Contato 
                    </p>
               <% } %>
          </div>
               <% if (contacts.length > 0){ %>
               <div class="responsive-table">
               
                    <table class="table my-3">
                    <% contacts.forEach(contact => { %>
                    <tr>
                         <td>Nome</td>
                         <td>Sobrenome</td>
                         <td>Email</td>
                         <td>Contato</td> 
                    </tr>
                    <tr>
                         <td><%= contact.nome %></td>
                         <td><%= contact.sobrenome %></td>
                         <td><%= contact.email %></td>
                         <td><%= contact.telefone %></td>   
                         <td style="max-width: 65px;min-width: 65px"><a href="/contact/<%= contact._id %>" class="btn btn-primary btn-lg  btn-sm" tabindex="-1" role="button" aria-disabled="true">Editar</a> 
                         <a class="btn  btn-danger btn-lg btn-sm" tabindex="-1" role="button" aria-disabled="true" href="contact/delete/<%= contact._id %>">Deletar</a></td>
                    </tr>
                    <% }); %>
                    </table>
               </div>
               <% } %>
               <div class="col-lg-2">
                    
               </div>
          
     </div>
</div>
<%- include('includes/footer') %>